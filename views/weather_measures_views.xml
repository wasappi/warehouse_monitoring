<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="weather_station_stations_search_view" model="ir.ui.view">
        <field name="name">weather_station.station.search</field>
        <field name="model">weather_station.station</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="[('name', 'ilike', self)]"/>
            </search>
        </field>
    </record>

    <!-- Form view for weather stations -->
    <record id="weather_station_stations_view_form" model="ir.ui.view">
        <field name="name">weather_station.station.form</field>
        <field name="model">weather_station.station</field>
        <field name="arch" type="xml">
            <form string="Weather Station">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="location_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List of weather stations -->
    <record id="weather_station_stations_view_list" model="ir.ui.view">
        <field name="name">weather_station.station.list</field>
        <field name="model">weather_station.station</field>
        <field name="arch" type="xml">
            <list string="Weather stations">
                <field name="name"/>
                <field name="location_id"/>
            </list>
        </field>
    </record>

    <!-- Action for Stations list view -->
    <record id="weather_station_station_action" model="ir.actions.act_window">
        <field name="name">Stations</field>
        <field name="res_model">weather_station.station</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first weather station</p>
        </field>
    </record>

    <!-- Action for Locations list view -->
    <record id="weather_station_location_action" model="ir.actions.act_window">
        <field name="name">Locations</field>
        <field name="res_model">weather_station.location</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first location</p>
        </field>
    </record>

</odoo>